{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6379,abortConnect=false"
  },
  "FeatureManagement": {
    "NewGraphCheck": false,
    "BetaDashboard": true
  },
  "Infrastructure": {
    "Logging": {
      "EnableDetailedOutput": true,
      "EnableEnrichment": true
    },
    "SqlLogging": {
      "SchemaName": "audit",
      "TableName": "Logs",
      "BatchSize": 50
    },
    "FeatureManagement": {
      "FailIfMissing": false
    },
    "Telemetry": {
      "ServiceName": "TemplateApi",
      "ServiceVersion": "1.0.0",
      "UseAzureMonitor": false,
      "OtlpEndpoint": "http://localhost:4317"
    },
    "Caching": {
      "ConnectionString": "localhost:6379,abortConnect=false",
      "InstanceName": "TemplateApi:",
      "DefaultExpirationMinutes": 60,
      "DataProtection": {
        "Enabled": true,
        "ApplicationName": "TemplateApi-Security"
      }
    },
    "Security": {
      "Authority": "https://demo.duendesoftware.com",
      "Audience": "api",
      "AllowedOrigins": [
        "https://localhost:7000",
        "https://portal.mycompany.com"
      ]
    },
    "RateLimiting": {
      "PolicyName": "Standard",
      "PermitLimit": 60,
      "WindowSeconds": 60,
      "QueueLimit": 0
    },
    "WebPerformance": {
      "EnableOutputCaching": true,
      "DefaultExpirationSeconds": 30,
      "RedisConnectionString": "localhost:6379,abortConnect=false"
    },
    "Networking": {
      "UserAgent": "TemplateApi-Client",
      "TimeoutSeconds": 30,
      "MaxRetries": 3,
      "IgnoreSslErrors": false
    },
    "OpenApi": {
      "DocumentTitle": "Template API",
      "DocumentVersion": "v1",
      "EnableAuth": true
    },
    "Serialization": {
      "NamingPolicy": "CamelCase",
      "IgnoreCondition": "WhenWritingNull",
      "WriteIndented": true
    },
    "Health": {
      "LivenessEndpoint": "/health/live",
      "ReadinessEndpoint": "/health/ready",
      "EnableLogPublisher": true
    },
    "ErrorHandling": {
      "IncludeStackTrace": true
    },
    "Resilience": {
      "RetryCount": 3,
      "RetryDelaySeconds": 2,
      "CircuitBreakerThreshold": 5,
      "CircuitBreakerBreakDurationSeconds": 10,
      "TotalRequestTimeoutSeconds": 30
    },
    "Database": {
      "ConnectionString": "Server=localhost;Database=TemplateApiDb;User Id=sa;Password=yourStrong(!)Password;TrustServerCertificate=True;",
      "MaxRetryCount": 5,
      "CommandTimeoutSeconds": 60,
      "EnableDetailedErrors": true,
      "EnableSensitiveDataLogging": true,
      "EnableAuditing": true,
      "EnableSoftDelete": true,
      "EnableSlowQueryLogging": true,
      "SlowQueryThresholdMilliseconds": 500
    },
    "Identity": {
      "ConnectionString": "Server=localhost;Database=TemplateApiDb;User Id=sa;Password=yourStrong(!)Password;TrustServerCertificate=True;",
      "SchemaName": "identity",
      "EnableDetailedErrors": true
    }
  }
}